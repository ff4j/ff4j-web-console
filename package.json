{
  "name": "ff4j-web-console",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "cross-env NODE_ENV=local run-p mock:server \"ng serve\"",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "lint": "run-p lint:ng lint:styles lint:html",
    "lint:ng": "ng lint",
    "lint:styles": "stylelint --config .lint/.stylelintrc.json src/**/*.scss",
    "lint:html": "htmlhint --config .lint/.htmlhintrc src/**/*.html",
    "format:prettier": "lint-staged",
    "format:all": "run-s format:prettier lint",
    "prepare": "husky",
    "mock:server": "json-server --watch mock/db.json --port 3000"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "yarn@1.22.22",
  "dependencies": {
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/platform-browser": "^21.1.0",
    "@angular/router": "^21.1.0",
    "@ngx-translate/core": "^17.0.0",
    "@ngx-translate/http-loader": "^17.0.0",
    "ngx-logger": "^5.0.12",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-eslint/builder": "21.2.0",
    "@angular/build": "^21.1.4",
    "@angular/cli": "^21.1.4",
    "@angular/compiler-cli": "^21.1.0",
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@eslint/js": "^10.0.1",
    "@ngx-env/builder": "21.0.1",
    "angular-eslint": "21.2.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.39.2",
    "htmlhint": "^1.9.1",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "json-server": "^1.0.0-beta.9",
    "lint-staged": "^16.2.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.8.1",
    "stylelint": "^17.3.0",
    "stylelint-config-sass-guidelines": "^13.0.0",
    "stylelint-scss": "^7.0.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "8.56.0",
    "vitest": "^4.0.8"
  }
}
